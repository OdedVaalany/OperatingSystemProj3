{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build and run active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-std=c++11",
                "-pthread",
                "-g",
                "-I.",
                "-o",
                "${fileDirname}/main",
                "${file}",
                "${fileDirname}/MapReduceClient.h",
                "${fileDirname}/MapReduceFramework.cpp",
                "${fileDirname}/MapReduceFramework.h",
                "${fileDirname}/Barrier.cpp",
                "${fileDirname}/Barrier.h",
                "${fileDirname}/SampleClient.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger.",
            "dependsOn": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "echo",
            "args": [
                "Build complete."
            ]
        },
        {
            "label": "C/C++: g++ build and run active file - Debug",
            "type": "process",
            "command": "${workspaceFolder}/main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "C/C++: g++ build and run active file"
        }
    ]
}